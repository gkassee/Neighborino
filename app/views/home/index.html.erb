<div class="wrapper">

<% if current_user %>
	
	<header>
	<%= link_to "NEIGHBORINO", root_path, :id => "site-logo" %>
		<ul>
				<li><%=link_to current_user.name, user_path(current_user.id)%> </li>
				<li><%= link_to('sign out', sign_out_path, :method => :delete) %></li>
		</ul>
	</header>

	<% if flash[:notice] %>
			<div class="flash-notice">
				<%=flash[:notice] %>
			</div>

	<% end %>

	<p>Check out what's going on in your neighborhood:</p>
		<% @question.each do |q| %>
			<%= q.body %>
		<% end %>


<% else %>

	<body id="sign-in-body">

		<div id="modal">
  	</div>

  	<% if flash[:notice] %>
			<div class="flash-notice">
				<%=flash[:notice] %>
			</div>
		<% end %>

			<div id='sign-in-wrapper'>

				<p class="signin-logo">NEIGHBORINO</p>
				<div id="login-button-wrapper"><%= link_to "LOGIN / SIGN-UP", "auth/twitter",  :id => "twitter-login" %></div>

			</div>

	</body>

<% end %>

</div>
